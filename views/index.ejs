<% include partials/header %>
<script language='javascript'>
	$(document).ready(function () {
	    $('.ui.accordion').accordion();
	});
</script>

<div id="main" class="ui container text">
	<div class="ui header">
		<h1>Towers</h1>
	</div>

	<div id="search" class="ui icon fluid input">
		<input id="searchTower" type="text" placeholder="Filter tower...">
		<i class="search icon"></i>
	</div>

<% bellTowers.forEach(function(tower){ %>
<div class="ui items segment towerContainer">
	<div class="ui item">
		<div class="image towerImageContainer">
			<img id="towerImage" src="<%= tower.val().image %>">
		</div>
		<div class="content">
			<a class="header towerName" href="/towers/<%= tower.key %>"> <%= tower.val().name %> </a>
			<div class="meta">
				<span class="towerID"> <%= tower.val().towerID %> -</span>
				<span class="Sestiere"> <%= tower.val().Sestiere %> -</span>
				<span class="architect">  <%= tower.val().architect%> </span>
			</div>
			<div class="description">
				<p>Description goes here</p>
			</div>
			<div class="extra">
				<div class="ui fluid buttons">
					<a href="/towers/<%= tower.key %>" class="ui button positive">View</a>
					<div class="or"></div>
					<a href="/towers/<%= tower.key %>/edit" class="ui button">Edit</a>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/scripts/index.js"></script>
<% }) %>


</div>
<% include partials/footer %>